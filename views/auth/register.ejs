<%- include('../partials/header.ejs') %> 

<body>

    <h3>Hello there!</h1>
    <div class="main">
    <form action="/auth/register" method="post">

        <label for="username">Username</label>
        <input type="text" name="username" id="username" required="true" placeholder="Username"><br><br>
        
        <label for="email">Email ID</label>
        <input type="email" name="email" id="email" required="true" placeholder="Email"> <br><br>

        <label for="password">Password</label>
        <input type="password" name="password" id="password" required="true" placeholder="Password"><br><br>

        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required="true" placeholder="Confirm Password"><br><br>

        <label for="token">Token</label>
        <input type="token" name="token" id="token" required="false" placeholder="Token"><br><br>
        <button class="button" type="submit">Register</button>
        <p>Already have an account? <a href="/auth/login">Login here!</a></p>
        <p>A confirmation mail will be sent to you after you register!</a></p>
    </form>   
</div> 

    <style>
        body{
            background-color:rgb(13, 12, 12);
            color: #fff;
            font-family: 'Outfit', sans-serif;
            text-align:center;
            justify-content:center;
            align-items:center;
        }
        h3{
            margin: 60px 0;
            color:#16e16e;
            font-size: 4rem;
        }
        .main{
            text-align:center;
            justify-content:center;
            align-items:center;
            margin: 30px 20%;
            padding: 100px 0;
            background-color: #171717;
            border-radius: 25px;
        }

        .button{
            position:relative;
            padding: 10px 30px;
            margin: 0 15px;
            color: #16e16e;
            text-decoration: none;
            letter-spacing: 2px;
            font-size: 20px;
            transition: 0.5s;
            overflow: hidden;
            margin-right: 60px;
            margin-left: 60px;
            background-color:#171717;
            border:none;
        }
        .button:hover{
            background: #16e16e;
            color: #191919;
            box-shadow: 0 0 50px #191919;
            transition: 0.s;
         }

        .button:before{
            content: '';
            position: absolute;
            top:0;
            left: 0;
            width: 10px;
            height: 10px;
            border-top: 2px solid #16e16e;
            border-left: 2px solid #16e16e;
            transition: 0.5s;
        }

        .button:hover:before{
            width: 100%;
            height:100%
        }

        .button:after{
            content: '';
            position: absolute;
            bottom:0;
            right: 0;
            width: 10px;
            height: 10px;
            border-bottom: 2px solid #16e16e;
            border-right: 2px solid #16e16e;
            transition: 0.5s;
        }

        .button:hover:after{
            width: 100%;
            height:100%
        }

        input{
            border-radius: 25px;
            background-color : #5a5a5a; 
            height: 40px;
            width: 50%;
            font-size: 20px;
        }

        label{
            font-size: 2rem;
            color: #16e16e;
            padding: 0 20px;
        }

        a{
            text-decoration: none;
            color: #16e16e;
        }
        a:hover{
            text-decoration: none;
            color: #1bc263; 
        }
        p{
            padding-top: 50px;
        }
    </style>



